<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" prefHeight="650.0" prefWidth="1200.0" style="-fx-background-color: #fff;"
            stylesheets="@../assets/css/style.css" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.toochi.resultmanagement.controllers.DashboardController">
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="579.0" prefWidth="250.0" style="-fx-background-color: #EBE8F9;"
              BorderPane.alignment="CENTER">
            <ImageView fitHeight="94.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                <VBox.margin>
                    <Insets top="50.0"/>
                </VBox.margin>
                <Image url="@../assets/icons/logo.png"/>
            </ImageView>
            <Button id="dashboardBtn" fx:id="studentBtn" alignment="BASELINE_LEFT" graphicTextGap="20.0"
                    mnemonicParsing="false" onMouseClicked="#studentBtn" prefHeight="45.0" prefWidth="250.0"
                    text="Student">
                <font>
                    <Font size="14.0"/>
                </font>
                <graphic>
                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../assets/icons/students.png"/>
                    </ImageView>
                </graphic>
                <VBox.margin>
                    <Insets top="30.0"/>
                </VBox.margin>
                <padding>
                    <Insets left="55.0"/>
                </padding>
            </Button>
            <Button id="dashboardBtn" alignment="BASELINE_LEFT" graphicTextGap="20.0"
                    mnemonicParsing="false" onMouseClicked="#inputResultBtn" prefHeight="45.0" prefWidth="250.0"
                    text="Input result">
                <font>
                    <Font size="14.0"/>
                </font>
                <graphic>
                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../assets/icons/input.png"/>
                    </ImageView>
                </graphic>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <padding>
                    <Insets left="55.0"/>
                </padding>
            </Button>
            <Button id="dashboardBtn" alignment="BASELINE_LEFT" graphicTextGap="20.0"
                    mnemonicParsing="false" onMouseClicked="#viewResultBtn" prefHeight="45.0" prefWidth="250.0"
                    text="View result">
                <font>
                    <Font size="14.0"/>
                </font>
                <graphic>
                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../assets/icons/view.png"/>
                    </ImageView>
                </graphic>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <padding>
                    <Insets left="55.0"/>
                </padding>
            </Button>
            <Button id="dashboardBtn" alignment="BASELINE_LEFT" graphicTextGap="20.0"
                    mnemonicParsing="false" onMouseClicked="#settingsBtn" prefHeight="45.0" prefWidth="250.0"
                    text="Settings">
                <font>
                    <Font size="14.0"/>
                </font>
                <graphic>
                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../assets/icons/settings.png"/>
                    </ImageView>
                </graphic>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <padding>
                    <Insets left="55.0"/>
                </padding>
            </Button>
        </VBox>
    </left>
</BorderPane>
