<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1030.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.toochi.resultmanagement.controllers.SettingsController">
    <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Pane prefHeight="120.0" prefWidth="200.0" style="-fx-background-color: #096C3A;">
            <Label layoutX="45.0" layoutY="26.0" prefHeight="66.0" prefWidth="245.0" text="Settings"
                   textFill="WHITE">
                <font>
                    <Font size="46.0"/>
                </font>
            </Label>
        </Pane>
        <HBox prefHeight="100.0" prefWidth="935.0" spacing="50.0">
            <padding>
                <Insets top="10.0"/>
            </padding>
            <ComboBox fx:id="programmeComboBox" prefHeight="40.0"
                      prefWidth="385.0" promptText="Programme">
                <HBox.margin>
                    <Insets left="50.0"/>
                </HBox.margin>
            </ComboBox>
            <ComboBox fx:id="semesterComboBox" layoutX="10.0" layoutY="10.0"
                      prefHeight="40.0" prefWidth="385.0" promptText="Semester"/>
        </HBox>
        <HBox prefHeight="63.0" prefWidth="935.0" spacing="50.0">
            <TextField fx:id="courseNameTextField" prefHeight="40.0" prefWidth="240.0">
                <HBox.margin>
                    <Insets left="50.0"/>
                </HBox.margin>
            </TextField>
            <TextField fx:id="courseCodeTexField" layoutX="10.0" layoutY="10.0" prefHeight="40.0"
                       prefWidth="240.0"/>
            <TextField fx:id="courseUnitsTextField" layoutX="250.0" layoutY="10.0" prefHeight="40.0"
                       prefWidth="240.0"/>
            <Button mnemonicParsing="false" onMouseClicked="#addCourseBtn" prefHeight="40.0"
                    prefWidth="149.0" text="Add">
                <HBox.margin>
                    <Insets right="50.0"/>
                </HBox.margin>
            </Button>
        </HBox>
        <TableView fx:id="tableView" prefHeight="363.0" prefWidth="930.0">
            <columns>
                <TableColumn fx:id="courseNameColumn" prefWidth="372.6666361093521" text="Course name"/>
                <TableColumn fx:id="courseCodeColumn" minWidth="0.0" prefWidth="114.66665649414062"
                             text="Course code"/>
                <TableColumn fx:id="courseUnitsColumn" prefWidth="89.33343505859375" text="Course units"/>
                <TableColumn fx:id="programmeColumn" minWidth="0.0" prefWidth="191.99993896484375"
                             text="Programme"/>
                <TableColumn fx:id="semesterColumn" prefWidth="159.33331298828125" text="Semester"/>
            </columns>
            <VBox.margin>
                <Insets left="50.0" right="50.0"/>
            </VBox.margin>
        </TableView>
    </VBox>
</AnchorPane>
